<wallaroo>
  <devices>

    <device>
      <name>lowLevelInput</name>
      <class>TableBasedDigitalInput</class>
      <parameter1>
        <type>string</type>
        <value>low</value>
      </parameter1>
    </device>

    <device>
      <name>highLevelInput</name>
      <class>TableBasedDigitalInput</class>
      <parameter1>
        <type>string</type>
        <value>high</value>
      </parameter1>
    </device>

    <device>
      <name>lowSensor</name>
      <class>LevelSensor</class>
    </device>

    <device>
      <name>highSensor</name>
      <class>LevelSensor</class>
    </device>

    <device>
      <name>probe</name>
      <class>TwoLevelSumpProbe</class>
    </device>

    <device>
      <name>output</name>
      <class>TableBasedDigitalOutput</class>
      <parameter1>
        <type>string</type>
        <value>pump engine</value>
      </parameter1>
    </device>

    <device>
      <name>engine</name>
      <class>SafeEngine</class>
    </device>

    <device>
      <name>airFlowSensor</name>
      <class>ThresholdGasSensor</class>
      <parameter1>
        <type>unsigned int</type>
        <value>5</value>
      </parameter1>
      <parameter2>
        <type>bool</type>
        <value>false</value>
      </parameter2>
    </device>

    <device>
      <name>COSensor</name>
      <class>ThresholdGasSensor</class>
      <parameter1>
        <type>unsigned int</type>
        <value>25</value>
      </parameter1>
      <parameter2>
        <type>bool</type>
        <value>true</value>
      </parameter2>
    </device>

    <device>
      <name>methaneSensor</name>
      <class>ThresholdGasSensor</class>
      <parameter1>
        <type>unsigned int</type>
        <value>10</value>
      </parameter1>
      <parameter2>
        <type>bool</type>
        <value>true</value>
      </parameter2>
    </device>

    <device>
      <name>airFlowInput</name>
      <class>TableBasedAnalogInput</class>
      <parameter1>
        <type>string</type>
        <value>air</value>
      </parameter1>
    </device>

    <device>
      <name>COInput</name>
      <class>TableBasedAnalogInput</class>
      <parameter1>
        <type>string</type>
        <value>co</value>
      </parameter1>
    </device>

    <device>
      <name>methaneInput</name>
      <class>TableBasedAnalogInput</class>
      <parameter1>
        <type>string</type>
        <value>methane</value>
      </parameter1>
    </device>

    <device>
      <name>alarmOutput</name>
      <class>TableBasedDigitalOutput</class>
      <parameter1>
        <type>string</type>
        <value>alarm output</value>
      </parameter1>
    </device>

    <device>
      <name>gasAlarm</name>
      <class>GasAlarm</class>
    </device>

    <device>
      <name>alarm</name>
      <class>Alarm</class>
    </device>

    <device>
      <name>pump</name>
      <class>SumpPump</class>
    </device>

    <device>
      <name>plant</name>
      <class>MinePlant</class>
    </device>

    <device>
      <name>console</name>
      <class>Console</class>
    </device>

  </devices>

  <wiring>

    <wire>
      <source>lowSensor</source>
      <dest>lowLevelInput</dest>
      <plug>input</plug>
    </wire>

    <wire>
      <source>highSensor</source>
      <dest>highLevelInput</dest>
      <plug>input</plug>
    </wire>

    <wire>
      <source>probe</source>
      <dest>lowSensor</dest>
      <plug>lowSensor</plug>
    </wire>

    <wire>
      <source>probe</source>
      <dest>highSensor</dest>
      <plug>highSensor</plug>
    </wire>

    <wire>
      <source>engine</source>
      <dest>output</dest>
      <plug>output</plug>
    </wire>

    <wire>
      <source>airFlowSensor</source>
      <dest>airFlowInput</dest>
      <plug>input</plug>
    </wire>

    <wire>
      <source>COSensor</source>
      <dest>COInput</dest>
      <plug>input</plug>
    </wire>

    <wire>
      <source>methaneSensor</source>
      <dest>methaneInput</dest>
      <plug>input</plug>
    </wire>

    <wire>
      <source>engine</source>
      <dest>methaneSensor</dest>
      <plug>sensor</plug>
    </wire>

    <wire>
      <source>alarm</source>
      <dest>alarmOutput</dest>
      <plug>output</plug>
    </wire>

    <wire>
      <source>gasAlarm</source>
      <dest>airFlowSensor</dest>
      <plug>sensors</plug>
    </wire>

    <wire>
      <source>gasAlarm</source>
      <dest>COSensor</dest>
      <plug>sensors</plug>
    </wire>

    <wire>
      <source>gasAlarm</source>
      <dest>methaneSensor</dest>
      <plug>sensors</plug>
    </wire>

    <wire>
      <source>gasAlarm</source>
      <dest>alarm</dest>
      <plug>alarm</plug>
    </wire>

    <wire>
      <source>pump</source>
      <dest>probe</dest>
      <plug>probe</plug>
    </wire>

    <wire>
      <source>pump</source>
      <dest>engine</dest>
      <plug>engine</plug>
    </wire>

    <wire>
      <source>plant</source>
      <dest>pump</dest>
      <plug>pump</plug>
    </wire>

    <wire>
      <source>plant</source>
      <dest>gasAlarm</dest>
      <plug>gasAlarm</plug>
    </wire>

    <wire>
      <source>airFlowInput</source>
      <dest>console</dest>
      <plug>table</plug>
    </wire>

    <wire>
      <source>COInput</source>
      <dest>console</dest>
      <plug>table</plug>
    </wire>

    <wire>
      <source>methaneInput</source>
      <dest>console</dest>
      <plug>table</plug>
    </wire>

    <wire>
      <source>lowLevelInput</source>
      <dest>console</dest>
      <plug>table</plug>
    </wire>

    <wire>
      <source>highLevelInput</source>
      <dest>console</dest>
      <plug>table</plug>
    </wire>

    <wire>
      <source>output</source>
      <dest>console</dest>
      <plug>table</plug>
    </wire>

    <wire>
      <source>alarmOutput</source>
      <dest>console</dest>
      <plug>table</plug>
    </wire>

  </wiring>

</wallaroo>