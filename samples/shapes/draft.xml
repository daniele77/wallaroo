<!--
This represents a shape set to be draw by the application.
Feel free to try and modify it :-)
-->

<wallaroo>
  <parts>

    <part>
      <name>rec1</name>
      <class>Rectangle</class>
      <attribute>
        <name>width</name>
        <value>10</value>
      </attribute>
      <attribute>
        <name>height</name>
        <value>10</value>
      </attribute>
    </part>

    <part>
      <name>rec2</name>
      <class>Rectangle</class>
      <attribute>
        <name>width</name>
        <value>5</value>
      </attribute>
      <attribute>
        <name>height</name>
        <value>3</value>
      </attribute>
    </part>
    
    <part>
      <name>circle</name>
      <class>Circle</class>
      <attribute>
        <name>radius</name>
        <value>10</value>
      </attribute>
    </part>

    <part>
      <name>triangle1</name>
      <class>Triangle</class>
      <attribute>
        <name>base</name>
        <value>16</value>
      </attribute>
      <attribute>
        <name>height</name>
        <value>10</value>
      </attribute>
    </part>

    <part>
      <name>triangle2</name>
      <class>Triangle</class>
      <attribute>
        <name>base</name>
        <value>6</value>
      </attribute>
      <attribute>
        <name>height</name>
        <value>10</value>
      </attribute>
    </part>

  </parts>

  <wiring>

    <wire>
      <source>draft</source>
      <dest>rec1</dest>
      <collaborator>shapes</collaborator>
    </wire>

    <wire>
      <source>draft</source>
      <dest>rec2</dest>
      <collaborator>shapes</collaborator>
    </wire>

    <wire>
      <source>draft</source>
      <dest>circle</dest>
      <collaborator>shapes</collaborator>
    </wire>
    
    <wire>
      <source>draft</source>
      <dest>triangle1</dest>
      <collaborator>shapes</collaborator>
    </wire>
   <wire>
      <source>draft</source>
      <dest>triangle2</dest>
      <collaborator>shapes</collaborator>
    </wire>

  </wiring>

</wallaroo>