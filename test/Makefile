# usage:
# make BOOST=<BOOST_DIR> 
# or
# make BOOST=<BOOST_DIR> UCFLAGS=-std=c++0x

CC = g++
CFLAGS = -Wall -I.. -DBOOST_TEST_DYN_LINK -I$(BOOST) $(UCFLAGS)
LFLAGS = $(ULFLAGS) -L$(BOOST)/stage/lib -lboost_unit_test_framework -ldl
OBJ = test_cfg_file.o test_multiplicitycheck.o test_wiring.o test_creation.o test_dynamiclib.o test_attributes.o driver.o
OBJ_PLUGIN = plugin.o
OBJ_PLUGIN2 = plugin2.o
EXE = test_suite
PLUGIN = plugin.so
PLUGIN2 = plugin2.so

all: $(EXE) $(PLUGIN) $(PLUGIN2) test

%.o: %.cpp
	$(CC) -c -o $@ $< $(CFLAGS)

$(EXE): $(OBJ)
	$(CC) -Wl,-E -o $@ $^ $(LFLAGS)

$(PLUGIN): $(OBJ_PLUGIN)
	$(CC) -fPIC -shared -Wl,-E -Wl,-soname,$@ -o $@ $^ $(LFLAGS)

$(PLUGIN2): $(OBJ_PLUGIN2)
	$(CC) -fPIC -shared -Wl,-E -Wl,-soname,$@ -o $@ $^ $(LFLAGS)

test:
	export LD_LIBRARY_PATH=.:$(BOOST)/stage/lib ; ./$(EXE)

clean:
	rm -f *.o *~ core $(EXE) *.so
