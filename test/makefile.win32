# usage:
# set env var BOOST to boost lib path
# nmake /f makefile.win32
# or
# nmake /f makefile.win32 DEBUG=1
# or
# nmake /f makefile.win32 UNICODE=1
# or
# nmake /f makefile.win32 DEBUG=1 UNICODE=1

#define macros
EXE_NAME = test_suite.exe
DIR_INCLUDE = /I.. /I%BOOST%

!ifdef DEBUG
PLUGIN1_NAME = plugind.dll
PLUGIN2_NAME = plugin2d.dll
RUNTIME_LIB = /MDd
!else
PLUGIN1_NAME = plugin.dll
PLUGIN2_NAME = plugin2.dll
RUNTIME_LIB = /MD
!endif

!ifdef UNICODE
CHAR_SET = /D "_UNICODE" /D "UNICODE"
!else
CHAR_SET = /D "_MBCS"
!endif

RUN_OPT = --build_info --report_level=short
COMPILE_FLAGS = /nologo /EHsc /DBOOST_TEST_DYN_LINK $(RUNTIME_LIB) $(CHAR_SET)
LINK_FLAGS = /LIBPATH:%BOOST%\stage\lib /NOLOGO
PATH = $(PATH);$(BOOST)\stage\lib\ # to run the test suite

RM = del /F /Q 2> nul

CPPFLAGS = $(COMPILE_FLAGS) $(DIR_INCLUDE)

EXE_OBJ_FILES= \
    test_cfg_file.obj \
    test_wal_file.obj \
    test_multiplicitycheck.obj \
    test_wiring.obj \
    test_creation.obj \
    test_dynamiclib.obj \
    test_attributes.obj \
    driver.obj

PLUGIN1_OBJ_FILES= \
    plugin.obj \
    plugin_ext.obj

PLUGIN2_OBJ_FILES= \
    plugin2.obj

.PHONY: all mainapp plugin1 plugin2 test clean

# create directories and build application
all: clean plugin1 plugin2 mainapp test

$(EXE_NAME) : $(EXE_OBJ_FILES)
    @echo Linking $(EXE_NAME)...
    link $(LINK_FLAGS) /out:$(EXE_NAME) $(EXE_OBJ_FILES)

$(PLUGIN1_NAME) : $(PLUGIN1_OBJ_FILES)
    @echo Linking $(PLUGIN1_NAME)...
    link $(LINK_FLAGS) /DLL /out:$(PLUGIN1_NAME) $(PLUGIN1_OBJ_FILES)

$(PLUGIN2_NAME) : $(PLUGIN2_OBJ_FILES)
    @echo Linking $(PLUGIN2_NAME)...
    link $(LINK_FLAGS) /DLL /out:$(PLUGIN2_NAME) $(PLUGIN2_OBJ_FILES)

# application

mainapp: $(EXE_NAME)

plugin1: $(PLUGIN1_NAME)

plugin2: $(PLUGIN2_NAME)

# run the test
test:
    $(EXE_NAME) $(RUN_OPT)
    
# delete output files
clean:
    @-$(RM) *.obj
    @-$(RM) *.exp
    @-$(RM) *.lib
    @-$(RM) $(EXE_NAME)
    @-$(RM) $(PLUGIN1_NAME)
    @-$(RM) $(PLUGIN2_NAME)


