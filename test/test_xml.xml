<wallaroo>

  <plugins>
    <shared>plugin2</shared>
  </plugins>
  
  <devices>

    <device>
      <name>a</name>
      <class>A5</class>
    </device>

    <device>
      <name>b</name>
      <class>B5</class>
      <parameter1>
        <type>int</type>
        <value>10</value>
    </parameter1>
    </device>

    <device>
      <name>c1</name>
      <class>C5</class>
      <parameter1>
        <type>unsigned int</type>
        <value>10</value>
      </parameter1>
    </device>

    <device>
      <name>c2</name>
      <class>C5</class>
      <parameter1>
        <type>unsigned int</type>
        <value>10</value>
      </parameter1>
    </device>

    <device>
      <name>d</name>
      <class>D5</class>
      <parameter1>
        <type>string</type>
        <value>mystring</value>
      </parameter1>
      <parameter2>
        <type>int</type>
        <value>34</value>
      </parameter2>
    </device>

    <device>
      <name>e</name>
      <class>E5</class>
      <parameter1>
        <type>unsigned int</type>
        <value>5</value>
      </parameter1>
      <parameter2>
        <type>double</type>
        <value>3.14</value>
      </parameter2>
    </device>

    <device>
      <name>f</name>
      <class>F5</class>
    </device>

    <device>
      <name>g</name>
      <class>G5</class>
    </device>

  </devices>

  <wiring>

    <wire>
      <source>c1</source>
      <dest>a</dest>
      <plug>x</plug>
    </wire>

    <wire>
      <source>c2</source>
      <dest>b</dest>
      <plug>x</plug>
    </wire>

    <wire>
      <source>d</source>
      <dest>a</dest>
      <plug>container</plug>
    </wire>

    <wire>
      <source>d</source>
      <dest>b</dest>
      <plug>container</plug>
    </wire>

  </wiring>

</wallaroo>