<wallaroo>

  <plugins>
    <shared>plugin2</shared>
  </plugins>

  <devices>

    <device>
      <name>a</name>
      <class>A5</class>
    </device>

    <device>
      <name>b</name>
      <class>B5</class>
      <parameter1>
        <type>int</type>
        <value>10</value>
    </parameter1>
    </device>

    <device>
      <name>c1</name>
      <class>C5</class>
      <parameter1>
        <type>unsigned int</type>
        <value>10</value>
      </parameter1>
    </device>

    <device>
      <name>c2</name>
      <class>C5</class>
      <parameter1>
        <type>unsigned int</type>
        <value>10</value>
      </parameter1>
    </device>

    <device>
      <name>d</name>
      <class>Foo::D5</class>
      <parameter1>
        <type>string</type>
        <value>mystring</value>
      </parameter1>
      <parameter2>
        <type>int</type>
        <value>34</value>
      </parameter2>
    </device>

    <device>
      <name>e</name>
      <class>E5</class>
      <parameter1>
        <type>unsigned int</type>
        <value>5</value>
      </parameter1>
      <parameter2>
        <type>double</type>
        <value>3.14</value>
      </parameter2>
    </device>

    <device>
      <name>f</name>
      <class>F5</class>
      <parameter1>
        <type>double</type>
        <value>3.14</value>
      </parameter1>
      <parameter2>
        <type>bool</type>
        <value>false</value>
      </parameter2>
    </device>

    <device>
      <name>g</name>
      <class>G5</class>
      <parameter1>
        <type>bool</type>
        <value>false</value>
      </parameter1>
      <parameter2>
        <type>bool</type>
        <value>true</value>
      </parameter2>
    </device>

    <device>
      <name>h</name>
      <class>H5</class>
      <parameter1>
        <type>double</type>
        <value>1.0</value>
      </parameter1>
      <parameter2>
        <type>double</type>
        <value>-2.0</value>
      </parameter2>
    </device>

    <device>
      <name>l</name>
      <class>L5</class>
      <parameter1>
        <type>int</type>
        <value>-100</value>
      </parameter1>
      <parameter2>
        <type>string</type>
        <value>foo bar</value>
      </parameter2>
    </device>

    <device>
      <name>m</name>
      <class>M5</class>
      <parameter1>
        <type>long</type>
        <value>-2000000000</value>
      </parameter1>
      <parameter2>
        <type>char</type>
        <value>a</value>
      </parameter2>
    </device>

    <device>
      <name>n</name>
      <class>N5</class>
      <parameter1>
        <type>char</type>
        <value>b</value>
      </parameter1>
      <parameter2>
        <type>unsigned char</type>
        <value>200</value>
      </parameter2>
    </device>

    <device>
      <name>o_double</name>
      <class>O5&lt; double &gt;</class>
    </device>

    <device>
      <name>o_int</name>
      <class>O5&lt; int &gt;</class>
    </device>
    
    <device>
      <name>p</name>
      <class>P5</class>
    </device>

    <device>
      <name>q</name>
      <class>Q5</class>
    </device>

  </devices>

  <wiring>

    <wire>
      <source>c1</source>
      <dest>a</dest>
      <plug>x</plug>
    </wire>

    <wire>
      <source>c2</source>
      <dest>b</dest>
      <plug>x</plug>
    </wire>

    <wire>
      <source>d</source>
      <dest>a</dest>
      <plug>container</plug>
    </wire>

    <wire>
      <source>d</source>
      <dest>b</dest>
      <plug>container</plug>
    </wire>

  </wiring>

</wallaroo>